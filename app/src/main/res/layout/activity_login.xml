
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="right|center"
            android:layout_height="64dp">
            <TextView
                android:id="@+id/head_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="@dimen/sp28"
                android:typeface="sans"

                />
            <ImageView
                android:id="@+id/sm_iv"
                android:layout_marginRight="@dimen/margin_16"
                android:background="@drawable/ic_sm"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/margin_12"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dp8"
            app:cardMaxElevation="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="242dp">
                <TextView
                    android:id="@+id/welcome_tv"
                    android:typeface="sans"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp24"
                    android:layout_width="match_parent"
                    android:layout_height="54dp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:theme="@style/CustomAppTheme_textinputLayout"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginRight="@dimen/margin_16"
                    android:hint="请输入账号">

                    <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/name_et"
                        android:focusable="true"
                        android:textSize="@dimen/sp18"
                        android:singleLine="true"
                        android:completionThreshold="1"
                        android:drawableRight="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="48dp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinputlayout_password"
                    android:theme="@style/CustomAppTheme_textinputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginRight="@dimen/margin_16"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/password_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入密码"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp18"
                        android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/submit_bt"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_marginRight="@dimen/margin_16"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20"
                    android:theme="@style/Button_3_S" />
            </LinearLayout>


        </android.support.v7.widget.CardView>



    </LinearLayout>


